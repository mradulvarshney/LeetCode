class Solution {
    public String toLowerCase(String s) 
    {
        // String ans = "";
        // for(int i=0; i<s.length(); i++)
        // {
        //     ans += Character.toLowerCase(s.charAt(i));
        // }
        // return ans;
        
        //return s.toLowerCase();
        
        String str = "";
        for(int i=0; i<s.length(); i++)
        {
            if(s.charAt(i)>=65 && s.charAt(i)<=90)
            {
                str+=(char)(32+s.charAt(i));
            }
            else
            {
                str+=s.charAt(i);
            }
        }
        
        return str;
    }
}
