class Solution 
{
    public int mostWordsFound(String[] sentences) 
    {
        int count = 0;
        for(int i=0; i<sentences.length; i++)
        {
            String[] str = sentences[i].split(" ");
            if(count<str.length)
            {
                count = str.length;
            }
        }
        return count;
    }
}
